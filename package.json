{
  "name": "emogen",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o --proxy-config proxy.conf.json",
    "build": "ng build",
    "build-prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:emogen": "node dist/emogen/server/server.mjs",
    "genkit:dev": "tsx --tsconfig tsconfig.genkit.json genkit/server.ts",
    "genkit:build": "tsc -p tsconfig.genkit.json",
    "start:genkit": "tsx --tsconfig tsconfig.genkit.json genkit/server.ts",
    "test:emoji-flow": "node --test --import tsx genkit/flows/emojiFlow.spec.ts",
    "deploy:functions": "firebase deploy --only functions"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "express": "^5.1.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.0",
    "@angular/cli": "^20.3.0",
    "@angular/compiler-cli": "^20.3.0",
    "@genkit-ai/flow": "^0.5.17",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "genkit": "^1.22.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "openai": "^6.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "zod": "^3.25.76"
  }
}
