{
    "manifest_version": 3,
    "name": "Emogen - Emoji Mood Generator",
    "version": "1.0.1",
    "description": "Generate perfect emojis based on your mood or vibe, powered by AI",
    "author": "Emogen",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api-lkr3ru3foq-uc.a.run.app/*"
    ]
}